// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
// define Leave Model
model Leave {
  id        Int      @id @default(autoincrement())
  startDate DateTime
  endDate   DateTime
  owner     User     @relation(fields: [userId], references: [id])
  userId Int
  @@map("leave")
}
// Define User Model
model User {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  employeeId     String  @unique
  Leave     Leave[]
  totalLeaveDays Int
 @@map("users")
}
